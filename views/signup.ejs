<%- include('layouts/header') %> 

    <div class="container w-screen h-screen flex justify-center items-center">
        <div class="p-5 rounded border-2 border-slate-50 w-2/5">
            <h1 class="font-poppins bg-gradient-to-r from-blue-500 text-transparent to-cyan-500 bg-clip-text font-bold text-3xl mb-3 text-center">Sign Up</h1>
            <form action="/signup" method="post" class="flex flex-col">
                <label for="fname" class="font-bold text-lg text-slate-200 mb-1 mt-3">First Name</label>
                <input type="text" id="fname" name="fname" class="text-black px-2 py-0.5 rounded" required>
                <label for="lname" class="font-bold text-lg text-slate-200 mb-1 mt-3">Last Name</label>
                <input type="text" id="lname" name="lname" class="text-black px-2 py-0.5 rounded" required>
                <label for="email" class="font-bold text-lg text-slate-200 mb-1 mt-3">Email</label>
                <input type="email" id="email" name="email" class="text-black px-2 py-0.5 rounded" required>
                <label for="username" class="font-bold text-lg text-slate-200 mb-1 mt-3">Username</label>
                <input type="text" id="username" name="username" class="text-black px-2 py-0.5 rounded" required>
                <label for="password" class="font-bold text-lg text-slate-200 mb-1 mt-3">Password</label>
                <input type="password" id="password" name="password" class="text-black px-2 py-0.5 rounded" required>
                <button type="submit" class="py-0.5 px-3 mt-5 bg-blue-500 text-stone-900 rounded font-semibold w-fit mx-auto ">Send</button>
            </form>

            
            <p class="text-slate-200 mt-10">Back to home page <a href="/home" class="text-sky-500 font-semibold">click here</a></p>
            <p class="text-slate-200">Already have account? Login <a href="/login" class="text-sky-500 font-semibold">here</a></p>
        </div>

    </div>


<%- include('layouts/footer') %>